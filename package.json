{
  "name": "@adverant-nexus/nexus-robotics",
  "version": "1.0.0",
  "description": "Autonomous robotics microservice for drones, missiles, ground vehicles, and multi-platform coordination",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only api/src/server.ts",
    "start": "node dist/api/src/server.js",
    "start:worker": "node dist/workers/src/index.js",
    "test": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "keywords": [
    "robotics",
    "autonomous-systems",
    "drones",
    "missiles",
    "navigation",
    "sensor-fusion",
    "targeting",
    "swarm",
    "electronic-warfare"
  ],
  "author": "Adverant AI",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "axios": "^1.6.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "bullmq": "^4.14.0",
    "ioredis": "^5.3.2",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "prom-client": "^15.1.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "kalman-filter": "^2.0.1",
    "mathjs": "^12.1.0",
    "geojson": "^0.5.0",
    "h3-js": "^4.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/geojson": "^7946.0.13",
    "@types/jest": "^29.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
